<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- BASE LINK (Torso) -->
  <link name="base_link">
    <!-- Inertial properties for physics simulation -->
    <inertial>
      <mass value="10.0"/>  <!-- 10 kg torso mass -->
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>

    <!-- Visual representation -->
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 1.0"/>  <!-- 30cm wide, 20cm deep, 1m tall -->
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <!-- Collision geometry (matches visual for simplicity) -->
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 1.0"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo-specific properties for base_link -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>  <!-- Gazebo visual material -->
    <mu1>0.8</mu1>  <!-- Friction coefficient 1 (concrete-like surface) -->
    <mu2>0.8</mu2>  <!-- Friction coefficient 2 -->
    <kp>1000000.0</kp>  <!-- Contact stiffness (N/m) -->
    <kd>1.0</kd>  <!-- Contact damping (N*s/m) -->
  </gazebo>

  <!-- LEFT SHOULDER LINK -->
  <link name="left_shoulder_link">
    <inertial>
      <mass value="2.0"/>  <!-- 2 kg upper arm -->
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0"
               iyy="0.02" iyz="0.0" izz="0.005"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.3"/>  <!-- 5cm radius, 30cm long -->
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo properties for left_shoulder_link -->
  <gazebo reference="left_shoulder_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1>  <!-- Lower friction for limbs -->
    <mu2>0.5</mu2>
  </gazebo>

  <!-- LEFT SHOULDER JOINT (revolute) -->
  <joint name="left_shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_shoulder_link"/>
    <origin xyz="0 0.15 0.9" rpy="0 0 0"/>  <!-- Attach at top-left of torso -->
    <axis xyz="0 1 0"/>  <!-- Pitch rotation (y-axis) -->
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>  <!-- Â±90 degrees -->
    <dynamics damping="0.7" friction="0.5"/>  <!-- Joint damping and friction -->
  </joint>

  <!-- Gazebo joint properties -->
  <gazebo reference="left_shoulder_joint">
    <provideFeedback>true</provideFeedback>  <!-- Enable joint state feedback -->
  </gazebo>

  <!-- LEFT ELBOW LINK -->
  <link name="left_elbow_link">
    <inertial>
      <mass value="1.5"/>  <!-- 1.5 kg forearm -->
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <inertia ixx="0.015" ixy="0.0" ixz="0.0"
               iyy="0.015" iyz="0.0" izz="0.003"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>  <!-- 4cm radius, 25cm long -->
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo properties for left_elbow_link -->
  <gazebo reference="left_elbow_link">
    <material>Gazebo/Blue</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- LEFT ELBOW JOINT (revolute) -->
  <joint name="left_elbow_joint" type="revolute">
    <parent link="left_shoulder_link"/>
    <child link="left_elbow_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>  <!-- Attach at end of shoulder link -->
    <axis xyz="0 1 0"/>  <!-- Pitch rotation -->
    <limit lower="0" upper="2.36" effort="5" velocity="1.0"/>  <!-- 0 to 135 degrees -->
    <dynamics damping="0.5" friction="0.3"/>
  </joint>

  <!-- Gazebo joint properties -->
  <gazebo reference="left_elbow_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>

  <!-- RIGHT SHOULDER LINK (mirror of left) -->
  <link name="right_shoulder_link">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0"
               iyy="0.02" iyz="0.0" izz="0.005"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.3"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo properties for right_shoulder_link -->
  <gazebo reference="right_shoulder_link">
    <material>Gazebo/Red</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- RIGHT SHOULDER JOINT (revolute) -->
  <joint name="right_shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_shoulder_link"/>
    <origin xyz="0 -0.15 0.9" rpy="0 0 0"/>  <!-- Attach at top-right of torso -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
    <dynamics damping="0.7" friction="0.5"/>
  </joint>

  <!-- Gazebo joint properties -->
  <gazebo reference="right_shoulder_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>

  <!-- RIGHT ELBOW LINK (mirror of left) -->
  <link name="right_elbow_link">
    <inertial>
      <mass value="1.5"/>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <inertia ixx="0.015" ixy="0.0" ixz="0.0"
               iyy="0.015" iyz="0.0" izz="0.003"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo properties for right_elbow_link -->
  <gazebo reference="right_elbow_link">
    <material>Gazebo/Red</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
  </gazebo>

  <!-- RIGHT ELBOW JOINT (revolute) -->
  <joint name="right_elbow_joint" type="revolute">
    <parent link="right_shoulder_link"/>
    <child link="right_elbow_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.36" effort="5" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.3"/>
  </joint>

  <!-- Gazebo joint properties -->
  <gazebo reference="right_elbow_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>

</robot>
